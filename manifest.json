{
    "name": "MeTools", //扩展程序名称
    "version": "1.0", //版本
    "manifest_version": 2, //一定要为2，否则会报错
    "description": "This is the static tool website metools browser plug-in online website: http:///tools.yimo.link/", //扩展程序描述
    "homepage_url": "http:///tools.yimo.link/",
    "browser_action": {
        "default_title": "MeTools",
        "default_icon": "logo.png", //默认图标
        "default_popup": "index.html" //点击图标时弹出的页面
    },
    "omnibox": { "keyword" : "metools" },
    "permissions": [
        "tabs", // 标签
        "webRequest", // web请求
        "webRequestBlocking",
        "storage", // 插件本地存储
        "http://fanyi.youdao.com/*",
        "http://api.fanyi.baidu.com/*",
        "https://fanyi.youdao.com/*",
        "https://api.fanyi.baidu.com/*",
        "https://hm.baidu.com/hm.js"
    ],
    "web_accessible_resources": ["hm.js"]
}